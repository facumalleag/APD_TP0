<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/textViewNroPaso"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/circle" />

    <EditText
        android:id="@+id/txtViewPaso"
        android:layout_width="194dp"
        android:layout_height="67dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/style_border_button"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/btnEliminarPaso"
        android:layout_width="16dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:width="16dp"
        android:height="14dp"
        android:background="#FFFFFF"
        android:onClick="eliminarPaso"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/minus_border"
        app:layout_constraintStart_toEndOf="@+id/txtViewIngrediente"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtViewId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</LinearLayout>