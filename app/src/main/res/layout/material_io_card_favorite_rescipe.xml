<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FavouritesRecipesActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:ignore="MissingConstraints">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:orientation="vertical">

                <!-- Media -->

                <!-- Buttons -->


                <!-- Title, secondary and supporting text -->

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="match_parent"
                    android:layout_height="194dp"
                    android:contentDescription="@string/content_description_media"
                    android:scaleType="fitCenter"
                    android:src="@drawable/default_recipe___copia" />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="61dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="10dp"

                    android:layout_marginBottom="100dp"

                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <ImageView
                    android:id="@+id/star_rating"
                    android:layout_width="37dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="250dp"
                    android:layout_toStartOf="@+id/rating"
                    android:src="@drawable/ic_baseline_star_yellow_24"
                    app:backgroundTint="@android:color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintRight_toLeftOf="@id/rating"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="316dp"
                    android:layout_marginBottom="250dp"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/recipeTitle"
                    android:layout_width="161dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="234dp"

                    android:layout_marginBottom="55dp"

                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ProfilePicture"
                    android:layout_width="45dp"
                    android:layout_height="42dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="340dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="161dp"
                    android:layout_height="41dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="170dp"

                    android:layout_marginBottom="15dp"

                    android:textAppearance="?attr/textAppearanceHeadline6" />


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="33dp"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="250dp"

        android:background="#FFFFFF"
        android:src="@drawable/baseline_favorite_24"
        android:textAppearance="?attr/textAppearanceHeadline6"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout4" />
</androidx.constraintlayout.widget.ConstraintLayout>