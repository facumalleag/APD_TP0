<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:com.github.smarteist="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2e2e"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="356dp"
        android:layout_height="163dp"
        app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
        app:layout_constraintTop_toTopOf="@id/fragmentContainerView">
        >

        <LinearLayout
            android:layout_width="356dp"
            android:layout_height="163dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="356dp"
                android:layout_height="163dp"
                android:layout_margin="16dp"
                app:cardCornerRadius="6dp"
                app:layout_constraintStart_toStartOf="@id/fragmentContainerView"
                app:layout_constraintTop_toTopOf="@id/fragmentContainerView">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imvcarrusel"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="50dp">


                </ImageView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>